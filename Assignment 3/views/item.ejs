<!doctype html>
<html lang="en">

<head>
    <title><%= car.itemName %></title>
    <meta name="description" content="carSwap" />
	<meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../css/master.css" />
    <link rel="stylesheet" type="text/css" href="../css/item.css" />   
</head>

<body>
        <header class="banner">
            <% include partials/header.ejs %>
        </header>

        <% include partials/user-navigation.ejs %>
	
    <main>
        <% include partials/site-navigation.ejs %>

        <div id="bread">
        <ul>
            <li><a href="/index">Home</a></li>
            <li>></li>
            <li><a href="/categories">Categories</a></li>
            <li>></li>
            <li>   
            <% var href="/item?itemCode=" + car.itemCode %>
            <a href="<%= href %>">
                <%= car.itemName %>
            </a>        
            </li>   
        </ul>
        </div>


        <div id="info">
                <form action="/categories">
                        <input type="submit" value="Back to Car List"/>
                </form>

        <h1>Car information</h1>
        <br>
         <br>
        <h2><strong>Car Name: </strong><%= car.itemName %></h2>

        <img id="pic" src="<%= car.imageURL %>" alt="img.jpg">
        <p><%= car.description %></p>
        <p>MORE Description</p>
        
        <form action="/swap">
            <button type="submit" name="itemCode" value=<%= car.itemCode %>>Swap It</button>
        </form>

        <form action="/myItems">
            <input type="submit" value="Rate It"/>
        </form>
       
        <form action="/cart">            
            <input type="submit" value="Add to Cart" />
        </form>
        <br>
         </div>
        
		
    </main>
	
	<footer id="Validation">
        <% include partials/footer.ejs %>
	</footer>
    
</body>
</html>
