<body>
    <header class="banner">
        <% include partials/header.ejs %>
    </header>
    
    <% include partials/user-navigation.ejs %>
	
    <main>
        <% include partials/site-navigation.ejs %>

        <div id="bread">
                <ul>
                    <li><a href="/index">Home</a></li>
                    <li>></li>
                    <li><a href="/signUp">Sign Up</a></li>
                </ul>
        </div>

        <h2 id="title">Sign Up</h2>
        <br>
        <form id="signUpForm" action="#">
        <input type="email" id="email" placeholder="Email Address"/>
        <span class="red-text">&nbsp;*</span>
        <br>   <br>        
        <input type="password" id="pass" minlength="8" placeholder="Password" required/>
        <span class="red-text">&nbsp;*</span>
        <br>   <br>
        <input type="password" id="passConfirm" minlength="8" placeholder="Confirm Password" required/>
        <span class="red-text">&nbsp;*</span>
        <br>   <br>
        <input type="submit" id="submit" value="Submit"/>
        </form>
        
		
    </main>
	
	<footer id="Validation">
        <% include partials/footer.ejs %>
	</footer>
    
</body>
