<!doctype html>
<html lang="en">

<head>
    <title>My Cars</title>
    <meta name="description" content="My Cars" />
	<meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../css/master.css" />
    <link rel="stylesheet" type="text/css" href="../css/mySwaps.css" />

    

</head>

<body>
    <header class="banner">
        <% include partials/header.ejs %>
    </header>
    
    <% include partials/user-navigation.ejs %>
	
    <main>
        <% include partials/site-navigation.ejs %>

        <div id="bread">
                <ul>
                    <li><a href="/index">Home</a></li>
                    <li>></li>
                    <li><a href="/myItems">My Cars</a></li>
                </ul>
        </div>

        <%# var username = signed in user%>

        <h1>CharlotteImport's swap offers</h1>

        

        <div id="cars">        
            <%# This form doesnt do anything special at the moment %>
        <form action="/index">
        <table style="width:40%">


                <tr class="bottom">
                  <th>Vehicle</th>
                  <th colspan="3">Swap Offer</th>
                </tr>
                

                <% 
                    var counter = 1;
                    userCars.forEach(function(item){
                %>
                <tr>

                  <td>


                    <% var href="/item?itemCode=" + item.itemCode %>
                    <a href="<%= href %>">
                        <%= item.itemName %>
                    </a> 

                </td>
                  
                  <td>ANOTHER ITEM</td>
                  <%                  
                   var options = "option" + counter; 
                   counter++;
                   %>
                  <td><button type="submit" name="<%= options %>" value="accept">Accept</button></td>
                  <td><button type="submit" name="<%= options %>" value="reject">Reject</button></td>

                </tr>
                   <% }); %>
                  
                <tr class="bottom">
                    <td colspan="4"></td>
                    
                </tr>
        </table>
            </form>
    </div>
		
    </main>
	
	<footer id="Validation">
        <% include partials/footer.ejs %>
	</footer>
    
</body>
</html>
